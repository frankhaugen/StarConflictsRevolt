@page "/singleplayer-setup"

<PageTitle>Single Player Setup</PageTitle>

<div class="setup-background">
    <!-- TODO: Replace with actual background -->
</div>

<div class="setup-title-panel">
    <h1>START NEW SINGLE PLAYER GAME</h1>
</div>

<div class="setup-form">
    <label for="sessionName">Session Name:</label>
    <input id="sessionName" @bind="sessionName" placeholder="My Awesome Game" />
</div>

@if (hasError)
{
    <div class="setup-error-message">@errorMessage</div>
}

<div class="setup-menu-buttons">
    <button class="menu-btn" @onclick="StartGame">Start Game</button>
    <button class="menu-btn" @onclick="GoToMenu">Back</button>
</div>

<div class="setup-navigation-instructions">
    <em>Enter a session name and click Start Game to begin.</em>
</div>

@code {
    private string sessionName = string.Empty;
    private bool hasError = false;
    private string errorMessage = string.Empty;

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private void StartGame()
    {
        if (string.IsNullOrWhiteSpace(sessionName))
        {
            hasError = true;
            errorMessage = "Session name cannot be empty.";
            return;
        }
        // TODO: Implement actual game start logic
        hasError = false;
        NavigationManager.NavigateTo("/galaxy");
    }

    private void GoToMenu()
    {
        NavigationManager.NavigateTo("/");
    }
}

