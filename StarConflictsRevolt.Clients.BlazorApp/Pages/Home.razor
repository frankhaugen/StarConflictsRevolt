@page "/"

<PageTitle>Star Conflicts: Revolt</PageTitle>

<div class="landing-background">
    <!-- TODO: Replace with animated starfield background -->
</div>

<div class="landing-title-panel">
    <h1>STAR CONFLICTS: REVOLT</h1>
</div>

<div class="landing-menu-buttons">
    <button class="menu-btn" @onclick="StartSinglePlayer">Start Single Player</button>
    <button class="menu-btn" @onclick="GoToGalaxy">Galaxy View</button>
    <button class="menu-btn" @onclick="ShowPlaceholder">Other (Placeholder)</button>
</div>

<div class="landing-user-info">
    <!-- TODO: Display user info/profile here -->
    <span>User: (not logged in)</span>
</div>

<div class="landing-navigation-instructions">
    <em>Use the menu buttons to navigate.</em>
</div>

<div class="landing-debug-toggle">
    <label>
        <input type="checkbox" @bind="showDebugMode" /> Debug Mode
    </label>
    @if (showDebugMode)
    {
        <div class="debug-info">Debug mode is ON</div>
    }
</div>

@code {
    private bool showDebugMode = false;

    private void StartSinglePlayer()
    {
        NavigationManager.NavigateTo("/singleplayer-setup");
    }

    private void GoToGalaxy()
    {
        NavigationManager.NavigateTo("/galaxy");
    }

    private void ShowPlaceholder()
    {
        NavigationManager.NavigateTo("/placeholder");
    }

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;
}

<style>
.landing-background {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: linear-gradient(120deg, #0a0a23 0%, #1a1a40 100%);
    z-index: 0;
    /* TODO: Add animated starfield */
}
.landing-title-panel {
    margin-top: 60px;
    text-align: center;
    z-index: 1;
}
.landing-menu-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 40px;
    gap: 16px;
    z-index: 1;
}
.menu-btn {
    font-size: 1.2rem;
    padding: 12px 32px;
    border-radius: 8px;
    border: none;
    background: #222255;
    color: #fff;
    cursor: pointer;
    transition: background 0.2s;
}
.menu-btn:hover {
    background: #444488;
}
.landing-user-info {
    margin-top: 40px;
    text-align: center;
    color: #aaa;
    z-index: 1;
}
.landing-navigation-instructions {
    margin-top: 24px;
    text-align: center;
    color: #ccc;
    z-index: 1;
}
.landing-debug-toggle {
    margin-top: 32px;
    text-align: center;
    z-index: 1;
}
.debug-info {
    color: #ffb300;
    margin-top: 8px;
}
</style>